@model WebAppRegisLogin.Models.UserModel
@{
    ViewBag.Title = "Register";
}

<fieldset>
    <legend>
        User Registration
    </legend>
    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
    {
<table>


    <tr>
        <td colspan="1">
            @Html.LabelFor(model => model.UserID)
        </td>

        <td>
            @Html.TextBoxFor(model => model.UserID)
        </td>
    </tr>

    <tr>
        <td colspan="2">
            @Html.ValidationMessageFor(mode => Model.UserID, null, new { @class = "text text-danger" })
        </td>
    </tr>

    <tr>
        <td>
            @Html.LabelFor(model => model.UserName)
        </td>

        <td>
            @Html.TextBoxFor(model => model.UserName)
        </td>
    </tr>

    <tr>
        <td colspan="2">
            @Html.ValidationMessageFor(mode => Model.UserName, null, new { @class = "text text-danger" })
        </td>
    </tr>


    <tr>
        <td>
            @Html.LabelFor(model => model.UserEmail)
        </td>

        <td>
            @Html.TextBoxFor(model => model.UserEmail)
        </td>
    </tr>

    <tr>
        <td colspan="2">
            @Html.ValidationMessageFor(mode => Model.UserEmail, null, new { @class = "text text-danger" })
        </td>
    </tr>

    <tr>
        <td>
            @Html.LabelFor(model => model.UserImage)
        </td>

        <td>
            @Html.TextBoxFor(model => model.UserImage)
        </td>
    </tr>

    <tr>
        <td colspan="2">
            @Html.ValidationMessageFor(mode => Model.UserImage, null, new { @class = "text text-danger" })
        </td>
    </tr>

    <tr>
        <td>
            @Html.LabelFor(model => model.UserPassword)
        </td>

        <td>
            @Html.PasswordFor(model => model.UserPassword)
        </td>
    </tr>

    <tr>
        <td colspan="2">
            @Html.ValidationMessageFor(mode => Model.UserPassword, null, new { @class = "text text-danger" })
        </td>
    </tr>

    <tr>
        <td>
        </td>
        <td>
            <table>
                <tr>
                    <td>
                        <input type="submit" value="Register" />
                    </td>

                    <td>
                        <input type="reset" value="Reset">
                    </td>
                </tr>
            </table>
        </td>
    </tr>

    @*
    <tr>
        <td colspan="2">
            @Html.ValidationMessageFor(model => model.SuccessMessage, null, new { @class = "alert alert-success"})
        </td>
    </tr>*@


</table>
    }

</fieldset>

